# ===========================
# 필수 API 키
# ===========================
GOOGLE_API_KEY=your-google-api-key-here
JINA_API_KEY=your-jina-api-key-here

# ===========================
# 환경 설정
# ===========================
APP_ENV=development
SPRING_PROFILES_ACTIVE=local
LOG_LEVEL=DEBUG

# ===========================
# 서비스 포트 설정
# ===========================
NLP_SERVICE_PORT=3001
GEMINI_PORT=3002
PGVECTOR_PORT=3003
UNIFIED_SEARCH_PORT=9004
LLM_ANALYZER_PORT=9008
MONITORING_PORT=9010

# ===========================
# 서비스 URL (로컬 개발)
# ===========================
PYTHON_NLP_URL=http://localhost:3001
GEMINI_CLASSIFIER_URL=http://localhost:3002
PGVECTOR_URL=http://localhost:3003
UNIFIED_SEARCH_URL=http://localhost:9004
LLM_ANALYZER_URL=http://localhost:9008
ELASTICSEARCH_URL=http://localhost:9200
MONITORING_URL=http://localhost:9010

# ===========================
# PostgreSQL 설정
# ===========================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=holo_oshi_db
DB_USER=holo_user
DB_PASSWORD=holo_password
DB_POOL_SIZE=10

# ===========================
# Redis 설정
# ===========================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis_secret
REDIS_DATABASE=0
REDIS_TIMEOUT=2000
REDIS_POOL_MAX=8

# ===========================
# Elasticsearch 설정 제거됨 (pgvector로 통합)
# ===========================

# ===========================
# Google API 설정
# ===========================
GOOGLE_PROJECT_ID=holo-oshi-finder
GOOGLE_LOCATION=us-central1
GOOGLE_MODEL=gemini-1.5-flash
GOOGLE_MAX_TOKENS=2048
GOOGLE_TEMPERATURE=0.7

# ===========================
# Jina API 설정
# ===========================
JINA_API_URL=https://api.jina.ai/v1/embeddings
JINA_MODEL=jina-embeddings-v2-base-en
JINA_DIMENSION=768

# ===========================
# CORS 설정
# ===========================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_ALLOWED_HEADERS=*
CORS_ALLOW_CREDENTIALS=true

# ===========================
# 메트릭 설정
# ===========================
METRICS_ENABLED=true
METRICS_EXPORT_INTERVAL=60000
METRICS_BATCH_SIZE=100
PROMETHEUS_ENABLED=true

# ===========================
# 회로 차단기 설정
# ===========================
CB_WINDOW_SIZE=10
CB_MIN_CALLS=5
CB_FAILURE_THRESHOLD=50
CB_WAIT_DURATION=30s
CB_HALF_OPEN_CALLS=3

# ===========================
# 재시도 설정
# ===========================
RETRY_MAX_ATTEMPTS=3
RETRY_WAIT_DURATION=1s

# ===========================
# AI 모델 동적 설정
# ===========================
AI_MODELS_OPENAI_MODELS=gpt-4o,gpt-4o-mini,gpt-4-turbo,o1,o1-mini
AI_MODELS_GEMINI_MODELS=gemini-2.5-pro,gemini-2.5-flash,gemini-2.0-flash-exp,gemini-1.5-pro,gemini-1.5-flash
AI_MODELS_DEFAULT_OPENAI_MODEL=gpt-4o
AI_MODELS_DEFAULT_GEMINI_MODEL=gemini-2.5-pro

# ===========================
# 동적 비용 설정
# ===========================
COST_CALCULATION_CURRENCY=USD
COST_CALCULATION_UPDATE_FREQUENCY=daily
COST_CALCULATION_API_ENDPOINT=
COST_CALCULATION_FALLBACK_TO_STATIC=true
COST_CALCULATION_WARNING_PER_REQUEST=0.10
COST_CALCULATION_ERROR_PER_REQUEST=1.00
COST_CALCULATION_DAILY_BUDGET=50.00
COST_CALCULATION_MONTHLY_BUDGET=1500.00

# ===========================
# 외부 가격 API 설정 (선택사항)
# ===========================
PRICING_API_URL=
PRICING_API_KEY=

# ===========================
# 기타 설정
# ===========================
JSON_PRETTY_PRINT=false
API_BASE_PATH=/
HEALTH_DETAILS=always
SPRING_LOG_LEVEL=INFO
ROOT_LOG_LEVEL=INFO